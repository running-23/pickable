<p id="notice"><%= notice %></p>

<h1 class="red text-center">Events</h1>

<div>
  <div>
    <% @events.each do |event| %>
      <div class="card container">
        <div class="card-body row flex">
          <div class="col-3">
            <div><%= l event.scheduled_date, format: :long %></div>
          </div>
          <div class="col-9">
            <div><%= event.title %></div>
            <div class="col-9 flex">
              <div class="col-3"><%= event.number_of_members %></div>
              <div class="col-3"><%= event.place %></div>
              <div class="event-crud col-3">
                <% if event.created_by?(current_user) %>
                  <div><%= link_to 'Show', event %></div>
                  <div><%= link_to 'Edit', edit_event_path(event) %></div>
                  <div><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @events %>

<br>

<%= link_to 'Create Event', new_event_path %>
