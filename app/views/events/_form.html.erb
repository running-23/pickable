<div class="container justify-content-center text-center">
  <div class="row">
    <%= form_with(model: event) do |form| %>
      <% if event.errors.any? %>
        <div id="error_explanation">
            <% event.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row justify-content-center my-5 h5">
        <div class=" col-2 orange text-start">
          <%= form.label :title, class: "col-form-label" %>
        </div>
        <%= form.text_field :title, class: "col-form-control col-4" %>
      </div>

      <div class="row justify-content-center mb-5 h5">
        <%= form.label :description, class: "col-form-label col-2 offset-2 orange text-start" %>
        <%= form.text_area :description, class: "col-form-control col-6 h6", rows: 4 %>
      </div>

      <div class="row justify-content-center mb-5 h5 me-5" id="select-category">
        <div class="col-form-label col-2 orange text-start offset-2">
          <%= form.label :category_id %>
        </div>
        <div class="col-form-control col-6 row h4">
          <%= form.collection_radio_buttons(:category_id, Category.all, :id, :name) do |b| %>
            <%= b.radio_button class:"my-auto col-2" do %>
              <%= b.radio_button + b.text %>
            <% end %>
            <%= b.label class:"badge bg-category my-1 col-2" do %>
              <%= b.label {b.text} %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row justify-content-center mb-5 h5">
        <%= form.label :number_of_members, class: "col-form-label col-2 offset-2 orange text-start" %>
        <%= form.number_field :number_of_members, class: "col-form-control col-6 h6" %>
      </div>

      <div class="row justify-content-center mb-5 h5">
        <%= form.label :scheduled_date, class: "col-form-label col-2 offset-2 orange text-start" %>
        <%= form.datetime_field :scheduled_date, min: Date.current, class: "col-form-control col-6 h6" %>
      </div>

      <div class="row justify-content-center mb-5 h5">
        <%= form.label :place, class: "col-form-label col-2 offset-2 orange text-start" %>
        <%= form.text_field :place, min: Date.current, class: "col-form-control col-6 h6" %>
      </div>

      <div class="row justify-content-center my-5 h5">
        <div class="col-auto">
          <%= form.submit class: 'btn btn-outline-info rounded-pill' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
