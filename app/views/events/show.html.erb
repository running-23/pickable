<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row text-center">
    <div>
      <h2 class="red"><%= @event.title %></h2>
    </div>
    <div>
      <%= l @event.scheduled_date, format: :short %>
    </div>
    <div class="badge bg-category w-25 mx-auto mt-4">
      <%= @event.category.name %>
    </div>
    <div>
      <%= @event.place %>
    </div>
    <div>
      <%= @event.description %>
    </div>
    <div>
      <strong>主催</strong>
      <%= @event.user.name %>
    </div>
  </div>

  <div class="row text-start">
    <div class="mb-2">
      メンバー  <%= @event.participations.size %> / <%= @event.number_of_members %>
    </div>
    <% @event.participations.each do |participation|%>
      <div class="col-1">
        <%# <%= image_tag participation.user.remote_avatar_url, class: 'rounded-circle', size: '50x50' %1> %>
        <div><%= image_tag 'pick.png', class: 'rounded-circle', size: '50x50' %></div>
        <div class="text-wrap text-break"><%= participation.user.name %></div>
      </div>
    <% end %>
  </div>

  <div class="row text-center">
    <div class="col-12">
      <% if logged_in? && current_user.participating_events.include?(@event) %>
        <%= link_to event_participation_path(@event), method: :delete do %>
          <div class="btn btn-outline-info rounded-pill">キャンセル</div>
        <% end %>
      <% else %>
        <%= link_to event_participation_path(@event), method: :post do %>
          <div class="btn btn-outline-info rounded-pill">参加</div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-12">
      <% if @event.created_by?(current_user) %>
        <%= button_to 'Pickable', event_pickable_path(@event), { method: :post, data: { confirm: 'Pickableを発動しますか？' } } %>
        <%= link_to 'Edit', edit_event_path(@event) %>
        <%= link_to 'Destroy', event_path, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <div><%= link_to 'Back', events_path %></div>
    </div>
  </div>

</div>
